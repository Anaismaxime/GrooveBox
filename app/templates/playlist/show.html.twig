{% extends 'base.html.twig' %}

{% block title %}Liste de la playlist{% endblock %}

{% block body %}

<h1>Tracks de la playlist {{ playlist_id }}</h1>

    {% for item in tracks %}
        {% set track = item.track %}
        <div class="track">
            <h3>{{ track.name }} â€“ {{ track.artists[0].name }}</h3>

            <iframe
                src="https://open.spotify.com/embed/track/{{ track.id }}"
                width="100%"
                height="80"
                frameborder="0"
                allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
                loading="lazy">
            </iframe>
        </div>
    {% endfor %}

{% endblock %}
