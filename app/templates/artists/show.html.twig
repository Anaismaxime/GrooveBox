{% extends 'base.html.twig' %}

{% block title %}{{ artist.name }}{% endblock %}

{% block body %}
    <section class="artist-details">
        <h1>{{ artist.name }}</h1>
        <img src="{{ asset('uploads/artists/' ~ artist.picture) }}" alt="{{ artist.name }}" width="300">
        <p>{{ artist.biography }}</p>
        <p>Pays : {{ artist.country }}</p>

        {% if artist.urlSpotify %}
            <a href="{{ artist.urlSpotify }}" target="_blank">Écouter sur Spotify</a>
        {% endif %}

        <br>
        <a href="{{ path('app_main') }}">← Retour à l'accueil</a>
    </section>
{% endblock %}
