{% extends 'base.html.twig' %}

{% block title %}Artists{% endblock %}

{% block body %}
    <h1>Artists</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ artist.biography }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ artist.picture }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ artist.country }}</td>
            </tr>
            <tr>
                <th>UrlSoundcloud</th>
                <td>{{ artist.urlSoundcloud }}</td>
            </tr>
            <tr>
                <th>UrlSpotify</th>
                <td>{{ artist.urlSpotify }}</td>
            </tr>
            <tr>
                <th>ArtistOfTheWeek</th>
                <td>{{ artist.artistOfTheWeek ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_artists_index') }}">back to list</a>

    <a href="{{ path('app_artists_edit', {'id': artist.id}) }}">edit</a>

    {{ include('artists/_delete_form.html.twig') }}
{% endblock %}
