{% extends 'base.html.twig' %}

{% block title %}Articles favoris{% endblock %}

{% block body %}
    <div class="favorites-page">
        <h1 class="section-title">À lire plus tard</h1>

        {% if favoritePosts is empty %}
            <p>Tu n'as pas encore enregistré d'article.</p>
        {% else %}
            <div class="posts-grid">
                {% for post in favoritePosts %}
                    <div class="post-card">
                        <h2>{{ post.title }}</h2>
                        <img src="{{ asset('uploads/posts/' ~ post.coverImage) }}" alt="{{ post.title }}" class="post-image">
                        <div class="btn-container">
                            <a href="{{ path('app_posts_show', { id: post.id }) }}" class="btn-black">Lire</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
