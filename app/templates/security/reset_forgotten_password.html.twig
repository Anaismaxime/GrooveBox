{% extends 'base.html.twig' %}

{% block title %}Demande de réinitialisation de mot de passe{% endblock %}

{% block body %}
    <section class="reset-form-section">
        <h1 class="title-new">Demande de réinitialisation de mot de passe</h1>

        {{ form_start(RequestPassForm) }}

        <div class="form-group">
            {{ form_label(RequestPassForm.email) }}
            {{ form_widget(RequestPassForm.email) }}
            {{ form_errors(RequestPassForm.email) }}
        </div>

        <div class="form-group">
            <button type="submit" class="btn-black">Envoyer</button>
        </div>

        {{ form_end(RequestPassForm) }}
    </section>
{% endblock %}
